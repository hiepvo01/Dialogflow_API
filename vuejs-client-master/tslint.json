{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**"
        ]
    },
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "indent": [
            true,
            "spaces",
            4
        ],
        "interface-name": false,
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": false,
        "no-trailing-whitespace": [
            true,
            "ignore-blank-lines"
        ],
        "max-classes-per-file": false,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "one-line": [
            true,
            "check-else",
            "check-open-brace"
        ],
        "no-console": false,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore",
            "allow-snake-case" // allow-snake-case: only for API-related!
        ],
        "member-ordering": false,
				"max-line-length": [false, 120],
				"whitespace": [false,
		      "check-branch",
		      "check-decl",
		      "check-operator",
		      "check-module",
		      "check-separator",
		      "check-rest-spread",
		      "check-type",
		      "check-typecast",
		      "check-type-operator",
		      "check-preblock"]
    }
}
